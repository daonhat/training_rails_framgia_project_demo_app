<% if logged_in? %>
  <%= form_for(@comment ||= Comment.new, html: { multipart: true, class: "form-horizontal comment_form" }, remote: true) do |f| %>
    <div class="hidden">
      <%= f.hidden_field :entry_id, value: entry.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <div class="form-group">
    
      <div class="col-md-1">
        <span class="pull-right">
          <%= gravatar_for current_user, size: 30 %>
        </span>
      </div>

      <div class="col-md-10">
        <%= f.text_field :content, placeholder: "Write a comment...", class: "form-control comment_field",id: "comment_content_#{entry.id}" %>
      </div>
    </div>
  <% end %>
<% end %>